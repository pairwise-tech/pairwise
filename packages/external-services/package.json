{
  "name": "@pairwise/external-services",
  "version": "0.0.1",
  "private": true,
  "description": "A simple Express Server to mock external service APIs for testing and development",
  "files": [
    "dist"
  ],
  "main": "dist/server.js",
  "typings": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "concurrently \"yarn build -- -w\" \"nodemon --inspect ./dist/server.js\"",
    "format": "yarn prettier:fix && yarn tslint:fix",
    "lint": "yarn prettier && yarn tslint",
    "prettier": "prettier --list-different \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "start": "node ./dist/server.js",
    "start:https": "SERVER_URL=https://127.0.0.1:9000 node ./dist/server.js",
    "test": "yarn lint",
    "tslint": "tslint --project tsconfig.json -c tslint.json",
    "tslint:fix": "tslint --project tsconfig.json -c tslint.json --fix"
  },
  "devDependencies": {
    "@types/faker": "4.1.8",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.2",
    "body-parser": "1.19.0",
    "concurrently": "5.0.2",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "faker": "4.1.0",
    "morgan": "1.9.1",
    "prettier": "1.19.1",
    "tslint": "5.20.1",
    "typescript": "3.7.4"
  },
  "dependencies": {
    "querystring": "0.2.0",
    "supertest": "4.0.2"
  }
}