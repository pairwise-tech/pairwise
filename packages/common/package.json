{
  "name": "@pairwise/common",
  "version": "0.0.1",
  "description": "Pairwise shared utilities and types",
  "private": true,
  "scripts": {
    "prebuild": "yarn run build:metadata",
    "build": "tsc",
    "build:metadata": "ts-node ./src/scripts/build-metadata-index.ts",
    "watch": "tsc -w",
    "prettier": "prettier --list-different \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "eslint": "eslint 'src/**/*.{ts,tsx}'",
    "eslint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "yarn prettier:fix && yarn eslint:fix",
    "lint": "yarn prettier && yarn eslint",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "yarn lint && yarn test:unit"
  },
  "dependencies": {
    "@types/bytes": "3.1.0",
    "@types/debug": "4.1.5",
    "bytes": "3.1.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.8",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "ts-node": "8.8.2",
    "typescript": "3.7.4"
  },
  "main": "dist/main.js",
  "typings": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
