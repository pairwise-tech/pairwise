{
  "name": "pairwise",
  "version": "0.0.1",
  "description": "Pairwise Codebase",
  "private": true,
  "scripts": {
    "setup": "yarn client:setup && yarn server:setup",
    "up": "docker-compose up",
    "down": "docker-compose down",
    "up:build": "docker-compose up --build",
    "pairwise": "concurrently \"yarn services:start\" \"yarn server:run\"",
    "common:build": "cd packages/common && yarn build",
    "common:watch": "cd packages/common && yarn watch",
    "client:setup": "cd packages/client && yarn setup:env",
    "client": "cd packages/client && yarn start",
    "client:dev": "cd packages/client && yarn start:dev",
    "client:https": "cd packages/client && yarn start:https",
    "client:build": "cd packages/client && yarn build",
    "client:prod": "cd packages/client && yarn start:prod",
    "client:codepress": "cd packages/client && yarn start:codepress",
    "server:setup": "cd packages/server && yarn setup:env",
    "server": "cd packages/server && yarn start",
    "server:dev": "cd packages/server && yarn start:dev",
    "server:https": "cd packages/server && yarn start:https",
    "server:build": "cd packages/server && yarn build",
    "server:run": "yarn db:migration && yarn server:prod",
    "server:prod": "cd packages/server && yarn start:prod",
    "www": "cd packages/www && yarn start",
    "www:dev": "cd packages/www && yarn start:dev",
    "www:build": "cd packages/www && yarn build",
    "www:prod": "cd packages/www && yarn start:prod",
    "db": "cd packages/server && yarn db",
    "db:setup": "cd packages/server && yarn setup:db",
    "db:reset": "cd packages/server && yarn db:reset",
    "db:migration": "cd packages/server && yarn migration:run",
    "services": "yarn services:start",
    "services:start": "cd packages/external-services && yarn start",
    "services:watch": "cd packages/external-services && yarn watch",
    "services:build": "cd packages/external-services && yarn build",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "test": "lerna run test",
    "build": "yarn common:build && lerna run build --parallel",
    "docker:dependencies": "docker build -t pairwise-dependencies -f Base.Dockerfile .",
    "docker:build": "docker build -t pairwise-runtime -f packages/e2e/Build.Dockerfile .",
    "docker:test": "docker build -t test -f packages/e2e/Test.Dockerfile .",
    "docker:prod-build": "docker build -t pairwise-production -f packages/server/Dockerfile .",
    "docker:prod-run": "docker run -t pairwise-production",
    "ci": "cd packages/e2e && yarn test:e2e && cd ../cypress && yarn cypress:run",
    "e2e": "docker-compose -f packages/e2e/docker-compose.yml up --abort-on-container-exit",
    "test:e2e": "cd packages/e2e && HOST=http://server:9000 yarn test:e2e",
    "cypress": "docker-compose -f packages/cypress/docker-compose.yml up --abort-on-container-exit",
    "test:cypress": "cd packages/cypress && yarn cypress:ci"
  },
  "workspaces": [
    "packages/*"
  ]
}
